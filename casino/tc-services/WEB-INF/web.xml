<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>Onlyone Casino</display-name>
    <description>Onlyone Casino</description>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>mypackage.Hello</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MessageServlet</servlet-name>
        <servlet-class>mypackage.MessageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MessageServlet</servlet-name>
        <url-pattern>/getSignMessage/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BalanceServlet</servlet-name>
        <servlet-class>mypackage.BalanceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BalanceServlet</servlet-name>
        <url-pattern>/balance/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WithdrawServlet</servlet-name>
        <servlet-class>mypackage.WithdrawServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WithdrawServlet</servlet-name>
        <url-pattern>/withdraw/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>mypackage.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FortyServlet</servlet-name>
        <servlet-class>mypackage.FortyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FortyServlet</servlet-name>
        <url-pattern>/forty/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FortyServletOnlyone</servlet-name>
        <servlet-class>mypackage.FortyServletOnlyone</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FortyServletOnlyone</servlet-name>
        <url-pattern>/forty-onlyone/</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>Database</description>
        <res-ref-name>jdbc/database</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>
